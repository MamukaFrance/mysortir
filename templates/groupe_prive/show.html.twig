{% extends 'base.html.twig' %}

{% block title %}GroupePrive{% endblock %}

{% block body %}
    <h1>GroupePrive</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ groupe_prive.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ groupe_prive.nom }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ groupe_prive.dateCreation ? groupe_prive.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Participants</th>
                <td>
                    <ul>
                        {% for p in groupe_prive.getParticipants %}
                        <li>{{ p.nom }}</li>
                        {% else %}
                        <li>Aucun participant</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_groupe_prive_index') }}">back to list</a>

    <a href="{{ path('app_groupe_prive_edit', {'id': groupe_prive.id}) }}">edit</a>

    {{ include('groupe_prive/_delete_form.html.twig') }}
{% endblock %}
